
@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <h2>Input form</h2>
    <div class="form-group ">
        <label>Text:</label>
        <textarea v-model="text" type="text" class="form-control" placeholder="Enter something" name="txbText"></textarea>
    </div>
    <div class="form-group">
        <label>File name:</label>
        <input v-model="fileName" type="text" class="form-control" placeholder="Enter file name" name="txbPath">
    </div>
    <div class="checkbox">
        <label><input v-model="xmlCheckBox" type="checkbox" name="remember"> Create XML file</label>
    </div>
    <div class="checkbox">
        <label><input v-model="csvCheckBox" type="checkbox" name="remember"> Create CSV file</label>
    </div>
    <button v-on:click="save" type="submit" class="btn btn-default">Submit</button>

    <p></p>
    <div class="panel panel-default col-md-6">
        <div class="col-md-6"></div>
        <label>Output files you can find here: @ViewBag.OutputFolder</label>
    </div>
</div>